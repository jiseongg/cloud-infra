[Unit]
Description=jenkins-master
After=network.target

[Service]
User=ec2-user
Type=oneshot

# Replace path to scripts if needed
WorkingDirectory=/home/ec2-user/jenkins-operation/jenkins-master
ExecStartPre=/usr/bin/mv /home/ec2-user/jenkins-operation/jenkins-master/.env.bak /home/ec2-user/jenkins-operation/jenkins-master/.env
ExecStart=/home/ec2-user/jenkins-operation/jenkins-master/up.sh
ExecStop=/home/ec2-user/jenkins-operation/jenkins-master/down.sh

RemainAfterExit=true
StandardOutput=journal

[Install]
WantedBy=multi-user.target
